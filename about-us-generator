  <script>
    // Deterministic generator logic (no auto-selection to avoid accidental highlights)
    function pick(list){return list[Math.floor(Math.random()*list.length)]}

    const tones = {
      "Professional":{opener:["Founded to deliver exceptional results","We build reliable solutions"],voice:"clear, confident and authoritative"},
      "Friendly":{opener:["We love helping people","Hi — we're a small team who cares"],voice:"warm, approachable and human"},
      "Playful":{opener:["Think bold, think curious","We make work a little more fun"],voice:"light-hearted and quirky"},
      "Inspirational":{opener:["Driven by a vision to change the world","We aim to inspire better futures"],voice:"uplifting and visionary"},
      "Minimal":{opener:["We make simple products that work","Less is more"],voice:"clean, concise and humble"},
      "Bold":{opener:["We challenge the status quo","We move fast and break molds"],voice:"direct, confident and energetic"}
    }

    const templates = {
      classic: function(ctx){return `${ctx.title}

${ctx.mission}

${ctx.what}

${ctx.values}

${ctx.cta}`},
      story: function(ctx){return `${ctx.title}

It started when ${ctx.founderStory}

Since then, ${ctx.progress}

${ctx.cta}`},
      tech: function(ctx){return `${ctx.title}

${ctx.mission}

What we build: ${ctx.products}

How we work: ${ctx.process}

${ctx.cta}`},
      impact: function(ctx){return `${ctx.title}

Our impact: ${ctx.impact}

How we measure it: ${ctx.metrics}

${ctx.cta}`}
    }

    function sanitize(s){return (s||"").trim()}

    // DOM
    const companyEl = document.getElementById('company')
    const industryEl = document.getElementById('industry')
    const missionEl = document.getElementById('mission')
    const toneGrid = document.getElementById('toneGrid')
    const lengthRange = document.getElementById('lengthRange')
    const lengthLabel = document.getElementById('lengthLabel')
    const templatesEl = document.getElementById('templates')
    const keywordsEl = document.getElementById('keywords')
    const previewTitle = document.getElementById('previewTitle')
    const previewBody = document.getElementById('previewBody')
    const metaTone = document.getElementById('metaTone')
    const metaLength = document.getElementById('metaLength')
    const metaTemplate = document.getElementById('metaTemplate')
    const brandMark = document.getElementById('brandMark')
    const brandName = document.getElementById('brandName')
    const brandIndustry = document.getElementById('brandIndustry')
    const previewArea = document.getElementById('previewArea')
    const guideArea = document.getElementById('guideArea')
    const tabPreview = document.getElementById('tabPreview')
    const tabGuide = document.getElementById('tabGuide')

    let selectedTone = 'Professional'
    let selectedTemplate = 'classic'

    toneGrid.querySelectorAll('.tone-item').forEach(el=>{
      el.addEventListener('click', ()=>{
        toneGrid.querySelectorAll('.tone-item').forEach(x=>x.classList.remove('active'))
        el.classList.add('active')
        selectedTone = el.dataset.tone
      })
    })

    templatesEl.querySelectorAll('.template-card').forEach(el=>{
      el.addEventListener('click', ()=>{
        templatesEl.querySelectorAll('.template-card').forEach(x=>x.style.borderColor='rgba(255,255,255,0.02)')
        el.style.borderColor='rgba(124,58,237,0.6)'
        selectedTemplate = el.dataset.template
        metaTemplate.textContent = 'Template: ' + el.textContent.split('—')[0].trim()
      })
    })

    function updateLengthLabel(){
      const v = Number(lengthRange.value)
      const map = {1:'XS',2:'Short',3:'Medium',4:'Long',5:'XL'}
      lengthLabel.textContent = map[v]
      metaLength.textContent = 'Length: ' + map[v]
    }
    lengthRange.addEventListener('input', updateLengthLabel)
    updateLengthLabel()

    companyEl.addEventListener('input', ()=>{
      const name = companyEl.value||'Acme Solutions'
      brandName.textContent = name
      brandMark.textContent = name.split(' ').map(s=>s[0]||'').slice(0,2).join('').toUpperCase()
    })
    industryEl.addEventListener('change', ()=>{brandIndustry.textContent = industryEl.value})

    function generate(){
      const company = sanitize(companyEl.value) || 'Your Company'
      const industry = sanitize(industryEl.value) || 'Company'
      const missionInput = sanitize(missionEl.value)
      const keywords = sanitize(keywordsEl.value).split(',').map(s=>s.trim()).filter(Boolean)
      const tone = selectedTone || 'Professional'
      const length = Number(lengthRange.value)
      const template = selectedTemplate || 'classic'

      const ctx = {}
      ctx.title = `About ${company}`
      ctx.mission = missionInput || pick(tones[tone].opener) + ` — ${company} is a ${industry.toLowerCase()} company focused on ${keywords.slice(0,3).join(', ') || 'delivering value to customers'}.`

      ctx.what = `${company} creates products and services that solve real problems for customers, with a strong focus on quality and long-term partnerships.`
      ctx.values = `Our values: ${keywords.length? keywords.join(', '): 'Integrity, Excellence, Customer-first'}.`
      ctx.cta = `Want to learn more? Visit our website or get in touch — we’d love to hear from you.`

      ctx.founderStory = `${company} began as a small idea to make ${industry.toLowerCase()} better.`
      ctx.progress = `Over the years we've expanded our services, grown the team, and helped dozens of clients succeed.`

      ctx.products = `Software products, integrations and tailored solutions designed to scale.`
      ctx.process = `We use user-centered design, agile development, and data-driven decisions.`

      ctx.impact = `We focus on sustainable growth, community engagement, and measurable outcomes.`
      ctx.metrics = `KPIs include customer retention, carbon reduction goals and impact hours donated.`

      if(length<=2){
        ctx.values = ctx.values.split('.').slice(0,1).join('.') + '.'
        ctx.what = ctx.what.split('.').slice(0,1).join('.') + '.'
        ctx.cta = `Learn more.`
      } else if(length>=4){
        ctx.mission += ` We combine deep domain expertise with cutting-edge technology to deliver measurable outcomes for our partners.`
        ctx.values += ` We hire for curiosity, kindness, and craftsmanship; we measure success by customer impact.`
        ctx.what += ` Our offerings include consulting, custom development, and managed services.`
        ctx.cta = `Get in touch to explore how we can help your organization grow.`
      }

      if(tone==='Friendly'){
        ctx.mission = ctx.mission.replace(' — ',' — We care about people and results. ')
        ctx.cta = "Drop us a line — we'd love to chat!"
      }
      if(tone==='Playful'){
        ctx.mission = ctx.mission + ' We like to have fun while solving hard problems.'
        ctx.cta = "Ready to make something awesome together? Let's go."
      }
      if(tone==='Minimal'){
        ctx.mission = ctx.mission.split('.')[0] + '.'
        ctx.values = ctx.values.split(',').slice(0,3).join(', ') + '.'
      }
      if(tone==='Bold'){
        ctx.mission = ctx.mission.toUpperCase()
      }

      const assembled = (templates[template]||templates.classic)(ctx)
      const parts = assembled.split('

')
      previewTitle.textContent = parts[0]||ctx.title
      previewBody.innerHTML = ''
      for(let i=1;i<parts.length;i++){
        const p = document.createElement('p')
        p.textContent = parts[i]
        previewBody.appendChild(p)
      }

      metaTone.textContent = 'Tone: ' + tone
      metaLength.textContent = 'Length: ' + lengthLabel.textContent
      metaTemplate.textContent = 'Template: ' + (selectedTemplate||'classic')
      // no auto-selection to avoid persistent blue highlight on mobile
    }

    document.getElementById('generateBtn').addEventListener('click', generate)
    document.getElementById('surpriseBtn').addEventListener('click', ()=>{
      companyEl.value = pick(['Nova Labs','BrightPath','Horizon Studio','Lumen Works','Acme Solutions'])
      industryEl.value = pick(['Technology','Creative Agency','Healthcare','Finance'])
      missionEl.value = ''
      keywordsEl.value = pick(['innovation, customer-first','sustainability, impact','trusted, secure'])
      const tonesEls = Array.from(toneGrid.querySelectorAll('.tone-item'))
      tonesEls.forEach(x=>x.classList.remove('active'))
      const chosen = pick(tonesEls)
      chosen.classList.add('active')
      selectedTone = chosen.dataset.tone
      generate()
    })

    document.getElementById('presetBtn').addEventListener('click', ()=>{
      companyEl.value = 'EcoSphere'
      industryEl.value = 'Nonprofit'
      missionEl.value = 'Empower communities to build sustainable futures.'
      keywordsEl.value = 'sustainability, community, education'
      toneGrid.querySelectorAll('.tone-item').forEach(x=>x.classList.remove('active'))
      toneGrid.querySelectorAll('.tone-item')[3].classList.add('active')
      selectedTone='Inspirational'
      selectedTemplate='impact'
      templatesEl.querySelectorAll('.template-card').forEach(x=>x.style.borderColor='rgba(255,255,255,0.02)')
      templatesEl.querySelectorAll('.template-card')[3].style.borderColor='rgba(124,58,237,0.6)'
      generate()
    })

    document.getElementById('copyBtn').addEventListener('click', async ()=>{
      const html = previewArea.innerText
      try{
        await navigator.clipboard.writeText(html)
        const btn = document.getElementById('copyBtn')
        const old = btn.textContent
        btn.textContent='Copied'
        setTimeout(()=>btn.textContent=old,1200)
      }catch(e){
        alert('Copy failed — your browser may restrict clipboard access. Select and copy manually.')
      }
    })

    document.getElementById('downloadBtn').addEventListener('click', ()=>{
      const txt = previewArea.innerText
      const blob = new Blob([txt], {type:'text/plain;charset=utf-8'})
      const url = URL.createObjectURL(blob)
      const a = document.createElement('a')
      a.href = url; a.download = (companyEl.value||'about') + '-about.txt'
      document.body.appendChild(a); a.click(); a.remove(); URL.revokeObjectURL(url)
    })

    const editBtn = document.getElementById('editBtn')
    const preview = previewArea
    editBtn.addEventListener('click', ()=>{
      const editable = preview.getAttribute('contenteditable') === 'true'
      preview.setAttribute('contenteditable', editable? 'false' : 'true')
      editBtn.textContent = editable? 'Edit' : 'Done'
      if(!editable) preview.focus()
    })

    document.getElementById('finalizeBtn').addEventListener('click', ()=>{
      const html = previewArea.innerText
      navigator.clipboard.writeText(html).then(()=>{
        const btn = document.getElementById('finalizeBtn')
        const old = btn.textContent
        btn.textContent='Finalized & Copied'
        setTimeout(()=>btn.textContent=old,1300)
      }).catch(()=>{
        alert('Could not copy automatically — select the preview text and copy.')
      })
    })

    // tabs switching
    tabPreview.addEventListener('click', ()=>{
      tabGuide.classList.remove('active')
      tabPreview.classList.add('active')
      previewArea.style.display='block'
      guideArea.style.display='none'
    })
    tabGuide.addEventListener('click', ()=>{
      tabPreview.classList.remove('active')
      tabGuide.classList.add('active')
      previewArea.style.display='none'
      guideArea.style.display='block'
    })

    // init
    generate()
  </script>
</body>
</html>
